{
	"easycom": {
		"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [
		{
			"path": "pages/home/index",
			"style": {
				"navigationBarTitleText": "uni-app",
				"disableScroll": false
			}
		},
		{
			"path": "pages/other/index",
			"style": {
				"disableScroll": false
			}
		},
		{
			"path": "pages/mine/index",
			"style": {
				"disableScroll": false
			}
		}
	],
	// 分包配置
	"subPackages": [
		{
			"root": "details",
			"pages": [
				{
					"path": "pages/detail",
					"style": {
						"disableScroll": false
					}
				}
			]
		}
	],
	// 页面预加载
	"preloadRule": {},
	"tabBar": {
		"color": "#7a7e83",
		"selectedColor": "#0faeff",
		"backgroundColor": "#ffffff",
		"list": [
			{
				"pagePath": "pages/home/index",
				"text": "首页",
				"iconPath": "static/img/home.png",
				"selectedIconPath": "static/img/homes.png"
			},
			{
				"pagePath": "pages/other/index",
				"text": "其他",
				"iconPath": "static/img/other.png",
				"selectedIconPath": "static/img/others.png"
			},
			{
				"pagePath": "pages/mine/index",
				"text": "我的",
				"iconPath": "static/img/mine.png",
				"selectedIconPath": "static/img/mines.png"
			}
		]
	},
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8",
		"navigationStyle": "custom" //取消原生navbar
	},
	"permission": {
		"scope.userLocation": {
			"desc": "你的位置信息将用于小程序位置接口的效果展示"
		}
	}
}